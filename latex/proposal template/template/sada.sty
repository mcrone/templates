% Definition der Kopf- und Fusszeilen
\newcommand{\ps@sada}
{
  \renewcommand{\@oddhead}{\hfill\rightmark}%
  \renewcommand{\@evenhead}{\leftmark\hfill}%
  \renewcommand{\@oddfoot}{\hfill\thepage}%
  \renewcommand{\@evenfoot}{\thepage\hfill}
  \def\chaptermark##1{%
    \markboth{%
      \ifnum \c@secnumdepth >\m@ne
        \thechapter\hspace{0.5em}
      \fi
      ##1}{%
        \ifnum \c@secnumdepth >\m@ne
          \thechapter\hspace{0.5em}
        \fi
        ##1}}
  \def\sectionmark##1{%
    \markright{%
      \ifnum \c@secnumdepth >\m@ne
        \thesection\hspace{0.5em}
      \fi
      ##1}}
}


